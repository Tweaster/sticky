<?xml version='1.0' encoding='utf-8'?>
<widget 
    id="org.projectfurnace.stickyroutine" 
    version="0.1.1" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>Sticky Routine</name>
    <description>
        An app that will help you stick to your routine.
    </description>
    <author email="fabrice@projectfurnace.org" href="http://buddjet.projectfurnace.org">
        Fabrice Rasoamiaramanana
    </author>


    <splash src="splash.png" />




    <platform name="ios"/>
    <platform name="android"/>
    <platform name="winphone"/>
    <preference name="phonegap-version" value="cli-6.3.0" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="disallowOverscroll" value="true" />
    <preference name="target-device" value="universal"/>
    <preference name="deployment-target" value="7.0"/>
    <preference name="exit-on-suspend" value="false"/>
    <preference name="detect-data-types" value="true"/>
    <preference name="prerendered-icon" value="false"/>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="ios-statusbarstyle" value="default"/>
    <preference name="StatusBarStyle" value="default" />
    
    <preference name="android-minSdkVersion" value="16" />
    <preference name="android-installLocation" value="auto" />
    
     <platform name="ios">
        <!-- iPhone 6 / 6+ -->
        <icon src="res/icons/icon@180x180.png" platform="ios" width="180" height="180" />
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icons/icon@60x60.png" platform="ios" width="60" height="60" />
        <icon src="res/icons/icon@120x120.png" platform="ios" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icons/icon@76x76.png" platform="ios" width="76" height="76" />
        <icon src="res/icons/icon@152x152.png" platform="ios" width="152" height="152" />
        <!-- Settings Icon -->
        <icon src="res/icons/icon@29x29.png" platform="ios" width="29" height="29" />
        <icon src="res/icons/icon@58x58.png" platform="ios" width="58" height="58" />
        <icon src="res/icons/icon@87x87.png" platform="ios" width="87" height="87" />
        <!-- Spotlight Icon -->
        <icon src="res/icons/icon@40x40.png" platform="ios" width="40" height="40" />
        <icon src="res/icons/icon@80x80.png" platform="ios" width="80" height="80" />
        <icon src="res/icons/icon@120x120.png" platform="ios" width="120" height="120" />
      </platform>
      
       <platform name="android">
        <icon src="res/icon/android/drawable-ldpi-icon.png" qualifier="ldpi"/>
        <icon src="res/icon/android/drawable-mdpi-icon.png" qualifier="mdpi"/>
        <icon src="res/icon/android/drawable-hdpi-icon.png" qualifier="hdpi"/>
        <icon src="res/icon/android/drawable-xhdpi-icon.png" qualifier="xhdpi"/>
        <icon src="res/icon/android/drawable-xxhdpi-icon.png" qualifier="xxhdpi"/>
        <icon src="res/icon/android/drawable-xxxhdpi-icon.png" qualifier="xxxhdpi"/>
      </platform>

      <platform name="winphone">
        <icon platform="winphone" width="30"  height="30"  src="res/icons/icon@30x30.png" />
        <icon platform="winphone" width="44"  height="44"  src="res/icons/icon@44x44.png" />
        <icon platform="winphone" width="50"  height="50"  src="res/icons/icon@50x50.png" />
        <icon platform="winphone" width="70"  height="70"  src="res/icons/icon@70x70.png" />
        <icon platform="winphone" width="71"  height="71"  src="res/icons/icon@71x71.png" />
        <icon platform="winphone" width="106" height="106" src="res/icons/icon@106x106.png" />
        <icon platform="winphone" width="120" height="120" src="res/icons/icon@120x120.png" />
        <icon platform="winphone" width="150" height="150" src="res/icons/icon@150x150.png" />
        <icon platform="winphone" width="170" height="170" src="res/icons/icon@170x170.png" />
        <icon platform="winphone" width="310" height="310" src="res/icons/icon@310x310.png" />
        <icon platform="winphone" width="360" height="360" src="res/icons/icon@360x360.png" />
      </platform>
      
       <platform name="ios">
        <splash src="res/screen/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="res/screen/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="res/screen/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" height="2008"/>
        <splash src="res/screen/ios/Default-736h.png" width="2208" height="1242"/>
        <splash src="res/screen/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="res/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
      </platform>
      
      <platform name="android">
        <splash src="res/screen/android/drawable-port-ldpi-screen.png" qualifier="ldpi"/>
        <splash src="res/screen/android/drawable-port-mdpi-screen.png" qualifier="mdpi"/>
        <splash src="res/screen/android/drawable-port-hdpi-screen.png" qualifier="hdpi"/>
        <splash src="res/screen/android/drawable-port-xhdpi-screen.png" qualifier="xhdpi"/>
        <splash src="res/screen/android/drawable-port-xxhdpi-screen.png" qualifier="xxhdpi"/>
        <splash src="res/screen/android/drawable-port-xxxhdpi-screen.png" qualifier="xxxhdpi"/>
      </platform>
      
      <preference name="permissions" value="none"/>
      
      <plugin name="cordova-plugin-device" spec="~1.1.1" source="npm"/>
      <plugin name="cordova-plugin-dialogs" spec="~1.2.0" source="npm"/>
      <plugin name="cordova-plugin-inappbrowser" spec="~1.3.0" source="npm"/>
      <plugin name="cordova-plugin-network-information" spec="1.2.0" source="npm"/>
      <plugin name="cordova-plugin-splashscreen" spec="~3.2.1" source="npm"/>
      <plugin name="cordova-plugin-statusbar" spec="~2.1.2" source="npm"/>
      <plugin name="cordova-plugin-whitelist" spec="~1.2.1" source="npm"/>
      <plugin name="phonegap-plugin-push" source="npm"/>


      <access origin="*" subdomains="true"/>
      
      <allow-intent href="http://*/*"/>
      <allow-intent href="https://*/*"/>
      <allow-intent href="tel:*"/>
      <allow-intent href="sms:*"/>
      <allow-intent href="mailto:*"/>
      <allow-intent href="geo:*"/>



    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
